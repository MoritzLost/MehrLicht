---
width: base
content_class: default
---

<!DOCTYPE html>
<html lang="{{ site.lang }}" dir="{{ site.dir }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>

    {# stylesheets and js #}
    <link rel="stylesheet" href="/css/main.css?v={{ site.version }}">
    <script src="/js/main.js?v={{ site.version }}" defer></script>

    {% include "components/seo.njk" %}
</head>
<body
    {% if themeColor %} style="--theme-color: {{ themeColor | safe }}"{% endif %}>
    <main class="main main--{{ width }}">
        <aside class="main__nav">
            {% include "components/navigation.njk" %}
        </aside>
        <article class="main__article content {{ content_class }}" id="content">
            {{ content | safe }}
        </article>
        <footer class="main__footer footer">
            {% include "components/footer.njk" %}
        </footer>
    </main>
</body>
</html>
